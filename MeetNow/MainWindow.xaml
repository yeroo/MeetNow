<Window x:Class="MeetNow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:MeetNow"
        mc:Ignorable="d"
        ShowInTaskbar="True" Visibility="Hidden" d:Visibility="Visible"
        Title="Meet Now!" 
        WindowStyle="None" AllowsTransparency="True" Background="#1F1F1F"
        Icon="/Icons/MeetNow.ico">
    <Grid>
        <tb:TaskbarIcon x:Name="tb" IconSource="/Icons/MeetNow.ico">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Exit" Click="MenuItem_ExitAppClick"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
